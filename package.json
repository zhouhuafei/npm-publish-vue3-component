{
  "name": "npm-publish-vue3-component",
  "version": "1.0.2",
  "description": "npm-publish-vue3-component",
  "main": "./lib/index.umd.js",
  "module": "./lib/index.es.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.umd.js",
      "import": "./lib/index.es.js"
    },
    "./lib/*": "./lib/*"
  },
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=22.15.0",
    "npm": ">=10.9.2"
  },
  "scripts": {
    "i": "npm i --legacy-peer-deps",
    "build:lib": "vite build -c ./vite.config.lib.ts",
    "prepublishOnly": "npm run i && npm run build:lib",
    "dev:dev": "vite --host --mode dev",
    "dev:uat": "vite --host --mode uat",
    "dev:prod": "vite --host --mode prod",
    "build:dev": "vite build --mode dev",
    "build:uat": "vite build --mode uat",
    "build:prod": "vite build --mode prod",
    "dev": "npm run dev:dev",
    "build": "npm run build:dev",
    "preview": "vite preview --port 5552",
    "devBak": "vite",
    "buildBak": "run-p type-check \"build-only {@}\" --",
    "previewBak": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix --cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhouhuafei/npm-publish-vue3-component.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zhouhuafei/npm-publish-vue3-component/issues"
  },
  "homepage": "https://github.com/zhouhuafei/npm-publish-vue3-component#readme",
  "dependencies": {
    "element-plus": "^2.13.2",
    "highlight.js": "^11.11.1",
    "vue": "^3.5.26",
    "xml-formatter": "^3.6.7"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.3",
    "@vitest/eslint-plugin": "^1.6.5",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "~10.6.2",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "sass": "^1.49.9",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.2"
  }
}
